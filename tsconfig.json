{
    "compilerOptions": {
        "target": "esnext",
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es2015", "es2016", "es2017", "dom"]
    },
    "include": ["server/**/*", "client/**/*", "utils/**/*", "type/**/*"],
    "exclude": ["node_modules"]
}
