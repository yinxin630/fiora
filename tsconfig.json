{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules"]
}
